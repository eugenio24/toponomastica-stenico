<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detailScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toponym Name -->
        <TextView
            android:id="@+id/nomeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Forma Ufficiale -->
        <TextView
            android:id="@+id/formaUfficialeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Forma ufficiale"
            app:layout_constraintTop_toBottomOf="@id/nomeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Comune -->
        <TextView
            android:id="@+id/comuneTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Comune"
            app:layout_constraintTop_toBottomOf="@id/formaUfficialeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Descrizione -->
        <TextView
            android:id="@+id/descrizioneTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descrizione"
            app:layout_constraintTop_toBottomOf="@id/comuneTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Quota -->
        <TextView
            android:id="@+id/quotaTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quota"
            app:layout_constraintTop_toBottomOf="@id/descrizioneTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Lat/Lon -->
        <TextView
            android:id="@+id/latlonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lat/Lon"
            app:layout_constraintTop_toBottomOf="@id/quotaTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Tags -->
        <TextView
            android:id="@+id/tagsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tags"
            app:layout_constraintTop_toBottomOf="@id/latlonTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Cluster -->
        <TextView
            android:id="@+id/clusterTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cluster"
            app:layout_constraintTop_toBottomOf="@id/tagsTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- HC Cluster -->
        <TextView
            android:id="@+id/hcClusterTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HC Cluster"
            app:layout_constraintTop_toBottomOf="@id/clusterTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Varianti -->
        <TextView
            android:id="@+id/variantiTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Varianti"
            app:layout_constraintTop_toBottomOf="@id/hcClusterTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Neighbors -->
        <TextView
            android:id="@+id/neighborsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vicini"
            app:layout_constraintTop_toBottomOf="@id/variantiTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
